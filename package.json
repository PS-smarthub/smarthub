{
  "name": "smarthub",
  "private": true,
  "scripts": {
    "create-app": "cd ./apps/ && smarthub-cli create-app",
    "build": "turbo build",
    "build:cold-start": "turbo build -w=cold-start",
    "build:smarthub": "turbo build -w=smarthub",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "prepare": "husky"
  },
  "devDependencies": {
    "@repo/eslint-config": "*",
    "@repo/typescript-config": "*",
    "husky": "^9.0.11",
    "prettier": "^3.1.1"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "npm@10.5.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "smarthub-cli": "^0.6.0",
    "turbo": "latest"
  }
}
