FROM node:20-alpine AS base
 
FROM base AS builder
RUN apk add --no-cache libc6-compat
RUN apk update

WORKDIR /app
RUN npm install -g turbo
COPY . .
RUN turbo prune smarthub --docker

FROM base AS installer
RUN apk add --no-cache libc6-compat
RUN apk update
WORKDIR /app

# First install the dependencies (as they change less often)
COPY .gitignore .gitignore
COPY --from=builder /app/out/json/ .
COPY --from=builder /app/out/package-lock.json ./package-lock.json
RUN npm ci
 
# Build the project
COPY --from=builder /app/out/full/ .
RUN npx turbo run build --filter=smarthub
 
FROM base AS runner
WORKDIR /app
 
# Don't run production as root
RUN addgroup --system --gid 1001 nodejs
RUN adduser --system --uid 1001 angelo
USER angelo
 
COPY --from=installer /app/apps/smarthub/next.config.js .
COPY --from=installer /app/apps/smarthub/package.json .
 
# Automatically leverage output traces to reduce image size
# https://nextjs.org/docs/advanced-features/output-file-tracing
COPY --from=installer --chown=nextjs:nodejs /app/apps/smarthub/.next/standalone ./
COPY --from=installer --chown=nextjs:nodejs /app/apps/smarthub/.next/static ./apps/smarthub/.next/static
COPY --from=installer --chown=nextjs:nodejs /app/apps/smarthub/public ./apps/smarthub/public
 
EXPOSE 3001

CMD node apps/smarthub/server.js