{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "env": [
        "COLD_START_API_URL",
        "SOT_API_URL",
        "JWT_SECRET_KEY",
        "AZURE_ENTRA_ID_CLIENT_ID",
        "AZURE_ENTRA_ID_TENANT_ID",
        "AZURE_ENTRA_ID_SECRET"
      ]
    }
  }
}
